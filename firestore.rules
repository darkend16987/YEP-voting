rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin email for special permissions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'hoangnam.mng@gmail.com';
    }

    // Users can only write their own vote
    // Path: artifacts/{appId}/user_votes/{userId}
    match /artifacts/{appId}/user_votes/{userId} {
      // Owner can read/write
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow Admin and guests (guarded by UI password) to list/delete for reset
      // We allow 'list' (read on collection) for anyone to support the reset function
      allow read, delete: if true; 
    }

    // Public votes readable by everyone (for Dashboard)
    // Path: artifacts/{appId}/public_votes/{voteId}
    match /artifacts/{appId}/public_votes/{voteId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == voteId;
      // Allow reset
      allow delete: if true;
    }

    // Config - readable by everyone (for Dashboard to check voting status), writable by anyone (guarded by password)
    // Path: artifacts/{appId}/config/{document}
    match /artifacts/{appId}/config/{document=**} {
      allow read: if true;
      allow write: if true; // Guarded by client-side security code
    }
  }
}
