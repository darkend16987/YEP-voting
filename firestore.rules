rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin email for special permissions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'hoangnam.mng@gmail.com';
    }

    // Users can only write their own vote
    // Path: artifacts/{appId}/user_votes/{userId} (4 segments)
    match /artifacts/{appId}/user_votes/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin(); // Admin can delete for reset
    }

    // Public votes readable by everyone (for Dashboard)
    // Path: artifacts/{appId}/public_votes/{voteId} (4 segments)
    match /artifacts/{appId}/public_votes/{voteId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == voteId;
      allow delete: if isAdmin(); // Admin can delete for reset
    }

    // Config - readable by everyone (for Dashboard to check voting status), writable by admin only
    // Path: artifacts/{appId}/config/{document}
    match /artifacts/{appId}/config/{document=**} {
      allow read: if true;
      allow write: if isAdmin(); // Admin can update voting status
    }
  }
}
